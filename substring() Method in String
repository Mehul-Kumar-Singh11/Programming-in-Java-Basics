
public class substring_Method {

	public static void main(String[] args) {
		String s = "Consistent";
		System.out.println(s.substring(3));
		System.out.println(s.substring(3,8));
		System.out.println(s.substring(3,3));
//		System.out.println(s.substring(3,1)); // java.lang.StringIndexOutofBoundsException
//		System.out.println(s.substring(-2,5));  // java.lang.StringIndexOutofBoundsException
		

	}

}
